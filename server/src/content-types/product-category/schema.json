{
  "kind": "collectionType",
  "collectionName": "product_categories",
  "info": {
    "singularName": "product-category",
    "pluralName": "product-categories",
    "displayName": "Product Category",
    "description": "Product categories for organization"
  },
  "options": {
    "draftAndPublish": true
  },
  "pluginOptions": {
    "content-manager": {
      "visible": true
    },
    "content-api": {
      "visible": true
    }
  },
  "attributes": {
    "name": {
      "type": "string",
      "required": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": false
    },
    "description": {
      "type": "text",
      "required": false
    },
    "image": {
      "type": "media",
      "multiple": false,
      "required": false,
      "allowedTypes": ["images"]
    },
    "products": {
      "type": "relation",
      "relation": "manyToMany",
      "target": "plugin::webbycommerce.product",
      "mappedBy": "product_categories"
    },
    "compares": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::webbycommerce.compare",
      "mappedBy": "category"
    }
  }
}